<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.carservice.controller.CustomerFormController"
      spacing="10">
    
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <GridPane hgap="10" vgap="10">
        <padding>
            <Insets bottom="10"/>
        </padding>

        <Label text="Forename:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="forenameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Surname:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="surnameField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Address:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="addressField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Post Code:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="postCodeField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <Label text="Phone:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <TextField fx:id="phoneField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
    </GridPane>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Save" onAction="#handleSave" defaultButton="true"/>
        <Button text="Cancel" onAction="#handleCancel" cancelButton="true"/>
    </HBox>
</VBox>
