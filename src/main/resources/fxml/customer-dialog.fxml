<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?><?import javafx.scene.layout.*?><?import javafx.geometry.Insets?><VBox fx:controller="com.carservice.controller.CustomerDialogController" spacing="10" xmlns:fx="http://javafx.com/fxml">
  <padding>
    <Insets bottom="20" left="20" right="20" top="20"></Insets>
  </padding>
  <GridPane hgap="10" vgap="10">
    <Label GridPane.columnIndex="0" GridPane.rowIndex="0" text="Forename:"></Label>
    <TextField GridPane.columnIndex="1" GridPane.rowIndex="0" fx:id="forenameField"></TextField>
    <Label GridPane.columnIndex="0" GridPane.rowIndex="1" text="Surname:"></Label>
    <TextField GridPane.columnIndex="1" GridPane.rowIndex="1" fx:id="surnameField"></TextField>
    <Label GridPane.columnIndex="0" GridPane.rowIndex="2" text="Address:"></Label>
    <TextField GridPane.columnIndex="1" GridPane.rowIndex="2" fx:id="addressField"></TextField>
    <Label GridPane.columnIndex="0" GridPane.rowIndex="3" text="Post Code:"></Label>
    <TextField GridPane.columnIndex="1" GridPane.rowIndex="3" fx:id="postCodeField"></TextField>
    <Label GridPane.columnIndex="0" GridPane.rowIndex="4" text="Phone:"></Label>
    <TextField GridPane.columnIndex="1" GridPane.rowIndex="4" fx:id="phoneField"></TextField>
  </GridPane>
  <HBox alignment="CENTER_RIGHT" spacing="10">
    <Button onAction="#handleSave" text="Save"></Button>
    <Button onAction="#handleCancel" text="Cancel"></Button>
  </HBox>
</VBox>
