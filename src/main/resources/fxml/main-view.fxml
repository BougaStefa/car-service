<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?><?import javafx.scene.layout.*?><?import javafx.geometry.Insets?><BorderPane fx:controller="com.carservice.controller.MainController" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
  <top>
    <MenuBar>
      <Menu text="File">
        <MenuItem onAction="#handleExit" text="Exit"></MenuItem>
      </Menu>
      <Menu text="Help">
        <MenuItem onAction="#handleAbout" text="About"></MenuItem>
      </Menu>
    </MenuBar>
  </top>
  <center>
    <TabPane tabClosingPolicy="UNAVAILABLE">
      <Tab text="Customers">
        <fx:include source="customer-view.fxml"></fx:include>
      </Tab>
    </TabPane>
  </center>
  <bottom>
    <HBox spacing="10">
      <padding>
        <Insets bottom="10" left="10" right="10" top="10"></Insets>
      </padding>
      <Label fx:id="statusLabel" text="Ready"></Label>
    </HBox>
  </bottom>
</BorderPane>
